generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
}

model Review {
  id               Int       @id @default(autoincrement())  // ID unique de la review
  name             String   
  text             Json      
  stars            Int       
  picture          String?   
  imagesReview     String[] 
  publishableDate  DateTime 
  reviewUrl        String    
  countryCode      String   
}

